<!-- This needs to be centered and very large font -->
<h1>Welcome to Viewing Party</h1>

<!-- This needs to be centered and significantly smaller font -->
<h5>Please Register for an Account</h5>

<%= form_tag '/users', method: :post do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>
  <%= submit_tag "Register", class: :button %>
<% end %>

<!-- Centered under "register" button -->
<%= link_to "Already Registered? Log in Here", "/" %>
