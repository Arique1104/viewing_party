<!-- Wireframe shows an emoji or image in the top left corner -->
<!-- The welcome is centered off the image -->
<h1>Welcome <%= @user.name.capitalize %>!</h1>
<%= button_to "Discover Movies", "/discover", method: :get %>
<section id="friends">
  <h3>Friends</h3>
  <!-- Add a line under header Friends -->
  <%= form_tag '/friends' do %>
    <%= label_tag "Friend's Email" %>
    <%= text_field_tag :email %>
    <%= submit_tag "Add Friend", class: :button %>
  <% end %>
  <!-- Friends list OR 'You currently have no friends.' -->
  <% if @user.friendships.empty? %>
    <p>You currently have no friends</p>
  <% else %>
    <% @friendships.each do |friend| %>
      <ul>
        <%= friend.name.capitalize %>
      </ul>
    <% end %>
  <% end %>
</section>
<section id="parties">
  <h3>Viewing Parties</h3>

    <% @my_parties.each do |party| %>
    <section id= 'party-<%=party.id%>'>

      <ul>
         <%= party.movie_title %>
      </ul>
      <ul>
        <%= party.date %>
      </ul>
      <ul>
        <%= party.start_time %>
      </ul>
      <ul>
        Hosting
      </ul>
    <% end %>
  </section>
    <% @invited_parties.each do |party| %>
    <section id= 'party-<%=party.id%>'>

      <ul>
         <%= party.movie_title %>
      </ul>
      <ul>
        <%= party.date %>
      </ul>
      <ul>
        <%= party.start_time %>
      </ul>
      <ul>
        Invited
      </ul>
    <% end %>
  </section>
</section>
